<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.katerina.iRedemption">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.katerina.iRedemption.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.katerina.iRedemption.AgreementActivity"/>
        <activity
            android:name="org.katerina.iRedemption.AnswersActivity"/>
        <activity
            android:name="org.katerina.iRedemption.FinishActivity"/>
        <activity
            android:name="org.katerina.iRedemption.SadActivity"/>
    </application>

</manifest>